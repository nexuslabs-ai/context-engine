{
  "name": "@context-engine/db",
  "version": "0.1.0",
  "description": "Database layer for Context Engine",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:init": "yarn db:push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@context-engine/core": "*",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "drizzle-kit": "^0.31.8",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "4.0.18"
  },
  "files": [
    "dist"
  ],
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
