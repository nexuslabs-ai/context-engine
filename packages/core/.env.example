# =============================================================================
# @context-engine/core - Environment Configuration
# =============================================================================
# Copy to .env: cp env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider
# -----------------------------------------------------------------------------

# Single API key for whichever provider you choose
LLM_API_KEY=

# Provider selection: 'anthropic' (default) or 'gemini'
CONTEXT_ENGINE_PROVIDER=anthropic

# Model override (defaults per provider if not set)
CONTEXT_ENGINE_MODEL=claude-opus-4-5-20251101

# -----------------------------------------------------------------------------
# Generation Config
# -----------------------------------------------------------------------------
CONTEXT_ENGINE_MAX_TOKENS=8192
CONTEXT_ENGINE_TIMEOUT_MS=180000
